{{ form_start(form) }}
<div>
    <div class="form-group col-4">
        {{form_label(form.name)}}
        {{ form_widget(form.name,{"attr":{"class":"form-control"}}) }}
        {%if not form.name.vars.valid%}
        <small class="form-text text-danger">{{form_errors(form.name)}}</small>
        {%endif%}
    </div>

    <div class="form-group col-4">
        {{form_label(form.presentation)}}
        {{ form_widget(form.presentation,{"attr":{"class":"form-control"}}) }}
        {%if not form.presentation.vars.valid%}
        <small class="form-text text-danger">{{form_errors(form.presentation)}}</small>
        {%endif%}
    </div>

    <div class="form-group col-4">
        {{form_label(form.country)}}
        {{ form_widget(form.country,{"attr":{"class":"form-control"}}) }}
        {%if not form.country.vars.valid%}
        <small class="form-text text-danger">{{form_errors(form.country)}}</small>
        {%endif%}
    </div>



    <div class="form-group col-4">
        {{form_label(form.rooms)}}
        {{ form_widget(form.rooms,{"attr":{"class":"form-control"}}) }}
        {%if not form.rooms.vars.valid%}
        <small class="form-text text-danger">{{form_errors(form.rooms)}}</small>
        {%endif%}
    </div>



</div>
<button class="btn btn-primary">{{ button_label|default('Save') }}</button>

{{ form_end(form) }}
